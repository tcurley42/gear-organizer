<h1>Edit Item</h1>
<div class="container">
  <form action="/items/<%=@item.id%>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch"/>
    <label for="box">Box:</label><br>
    <select name="item[box_id]" id="boxes">
      <% @user.boxes.each do |box| %>
        <option value="<%=box.id %>"><%=box.name %></option>
      <% end %>
    </select>
    <br>
    <label for="name">Name:</label><br>
    <input type="text" name="item[name]" id="name" value="<%= @item.name %>"/><br>
    <label for="description">Description:</label><br>
    <input type="text" name="item[description]" id="description" value="<%= @item.description %>"/><br>
    <input type="submit" name="submit" value="Edit Box"/>
  </form>
  <br>
  <form action="/items" method="get">
    <input type="submit" value="Cancel"/>
  </form>
</div>
