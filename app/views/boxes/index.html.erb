<h1>All Boxes</h1>

<div class="container">
  <form action="/boxes/new" method="get">
    <input type="submit" value="Create Box"/>
  </form>
</div>
<br>
<% User.all.each do |user| %>
  <h2><%= user.name %> (<%= user.username %>)</h2>
  <% if user.boxes.empty? %>
    User does not have any boxes yet!
  <% else %>
    <% user.boxes.each do |box| %>
      <a href="/boxes/<%= box.id %>"><%= box.name %></a><br><br>
    <% end %>
  <% end %>
<% end %>
